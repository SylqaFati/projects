@model IEnumerable<Book>

 <table class="table table-striped table-hover">
     <thead>
         <tr>
             <th>Id</th>
             <th>Name</th>
             <th>Author name</th>
             <th>Borrower name</th>
             <th>return</th>

         </tr>

     </thead>
     <tbody>
         @foreach (var book in Model)
         {
         <tr>
             <td>@book.BookId</td>
             <td>@book.title</td>
             <td>@book.author.name</td>
             <td>@book.borrower.Name</td>
             <td><a class="btn btn-success"  asp-controller="Return" asp-action="ReturnABook" asp-route-Id="@book.BookId" >Return</a></td>
             <td></td>
             
         </tr>
         }
     </tbody>


 </table> 