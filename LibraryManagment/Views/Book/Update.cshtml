@model BookViewModel

<div class="row orderForm">
    <form asp-controller="Book" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Update the  book</h3>
        @Html.HiddenFor(m => Model.Book.BookId);


        <div class="form-group">
            <label asp-for="Book.author" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.Book.AuthorId,
                   new SelectList(Model.Authors.Select(x => new { value = x.AuthorId, Text = x.name }), "Value", "Text"), "Select an author", htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Book" class="text-danger"></span>
              

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Book.title" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                <input asp-for="Book.title" class="form-control" placeholder="Enter a book title" />
                <span asp-validation-for="Book.title" class="text-danger"></span>
            </div>


            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Book" asp-action="list" />
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>