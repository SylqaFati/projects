@model IEnumerable<Book>

   


 <a class="btn btn-success" style="margin:10px" asp-controller="Book" asp-action="Create">Create new book</a>

<table class=" table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Authors name</th>
            <th>Edit book</th>
            <th>Delete book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
        <tr>
            <td>@book.AuthorId</td>
            <td>@book.title</td>
            <td>@book.author.name</td>
        <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-route-id="@book.BookId" asp-action="Update">Edit</a></td>
        <td><a class="btn btn-danger" asp-area="" asp-controller="Book" asp-route-id="@book.BookId" asp-action="Delete">Delete</a></td>


        </tr>
        }
    </tbody>

</table>