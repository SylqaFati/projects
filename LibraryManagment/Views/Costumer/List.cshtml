
@model IEnumerable<CostumerViewModel>

  

<a class="btn btn-success mt-5"  style="margin:10px" asp-controller="costumer" asp-action="Create">Create new costumer</a>

<table class=" table table-striped table-hover">

    <thead>

        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Borrowed books count</th>
            <th>Edit Costumer</th>
            <th>Delete Costumer</th>

            

        </tr>
        
    </thead>
    <tbody>
        @foreach (var costumerVM in Model)
        {
            <tr>

                <td>@costumerVM.costumer.CostumerId</td>
                 <td>@costumerVM.costumer.Name</td>
                <td>@costumerVM.BookCount</td>
                <td><a class="btn btn-info"    asp-area="" asp-controller="Costumer" asp-action="Update" asp-route-id="@costumerVM.costumer.CostumerId"> Edit</a> </td>
                <td><a class="btn btn-danger" asp-area=""    asp-controller="Costumer" asp-action="Delete"asp-route-Id="@costumerVM.costumer.CostumerId">Delete </a></td>

            </tr>
        }

    </tbody>

</table>