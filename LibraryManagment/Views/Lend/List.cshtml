@model IEnumerable<Book>
    
   <table class="table table-striped table-hover">
       <thead>
           <tr>

               <th>ID</th>
               <th>Name</th>
               <th>Authors name</th>
               <th>Lend a book</th>
           </tr>

       </thead>
       <tbody>

           @foreach (var book in Model)
    {

           <tr>
               <td>@book.BookId</td>
               <td>@book.title</td>
               <td>@book.author.name</td>
               <td><a class="btn btn-success" asp-controller="Lend" asp-action="LendBook" asp-route-bookid="@book.BookId">Lend</a> </td>

           </tr>
           }
       
       </tbody>

   </table>